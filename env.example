# Environment Variables for Frontend
# Copy this file to .env.local and fill in your values

# API Configuration
VITE_API_URL=https://your-fly-app.fly.dev/api

# Analytics (optional)
VITE_GA_TRACKING_ID=your-google-analytics-id

# Cloudflare (for media uploads)
VITE_CLOUDFLARE_ACCOUNT_ID=your-account-id
VITE_CLOUDFLARE_API_TOKEN=your-unified-api-token
VITE_CLOUDFLARE_IMAGES_TOKEN=your-images-token
VITE_CLOUDFLARE_STREAM_TOKEN=your-stream-token

# Admin Authentication (required for production)
VITE_ADMIN_USERNAME=your-secure-username
VITE_ADMIN_PASSWORD=your-secure-password

# Development
VITE_NODE_ENV=development
