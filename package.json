{
  "name": "jpstas-portfolio",
  "version": "2.0.0",
  "description": "Portfolio website for John P. Stas built with Qwik",
  "type": "module",
  "scripts": {
    "dev": "vite --mode ssr",
    "build": "qwik build && node scripts/post-build.js",
    "build.client": "vite build",
    "build.server": "vite build -c adapters/static/vite.config.ts",
    "build.types": "tsc --incremental --noEmit",
    "build:validate": "node scripts/validate-build.js",
    "build:debug": "node scripts/debug-build.js",
    "build:check": "npm run build && npm run build:validate",
    "pre-deploy": "node scripts/pre-deploy-check.js",
    "check:production": "node scripts/check-production.js",
    "preview": "vite preview",
    "serve": "wrangler pages dev ./dist",
    "r2:upload": "node scripts/upload-to-r2.js",
    "r2:audit": "node scripts/audit-media-urls.js",
    "r2:update-urls": "node scripts/update-r2-urls.js"
  },
  "dependencies": {
    "@builder.io/qwik": "^1.17.0",
    "@builder.io/sdk": "^6.1.3",
    "@builder.io/sdk-qwik": "^0.22.2"
  },
  "devDependencies": {
    "@builder.io/qwik-city": "^1.17.0",
    "@types/node": "^22.18.8",
    "autoprefixer": "^10.4.20",
    "ignore": "^7.0.5",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.42.0"
  }
}
